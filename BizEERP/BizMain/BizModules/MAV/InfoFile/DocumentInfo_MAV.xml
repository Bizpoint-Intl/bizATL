<?xml version="1.0" encoding="utf-8"?>
<BizXml	xmlns="BizRAD.BizDocument,	BizBase"
		xmlns:bas="BizRAD.BizBase,	BizBase"
		xmlns:def="Definition"
		xmlns:ref="Reference">
	<DocumentInfo Name="documentInfo" MainTable="mavh" Key="refnum" CompanyTitle="{languageBinding.coyHCC}" ModuleTitle="Stock Adjustment">
		<RelationTables>
			<DocRelationTableInfo TableName="mwt" DataField="refnum" ConditionField="refnum" Save="True"/>
			<!--<DocRelationTableInfo TableName="gld"    DataField="refnum" ConditionField="refnum" Save="True"/>-->
      
      <DocRelationTableInfo TableName="whm" DataField="whnum" ConditionField="whnum">
        <Fields>
          <Field ColumnName="whname"/>
        </Fields>
        </DocRelationTableInfo>
      
    <DocRelationTableInfo TableName="sitm" DataField="sitenum" ConditionField="sitenum">
    <Fields>
      <Field ColumnName="sitename"/>
    </Fields>
    </DocRelationTableInfo>
    </RelationTables>
    
		<DocumentPages>
			<!-- mavh -->
			<DocumentPageInfo FileName="Header.xml"		FormName="header" Title="Header">
        <F2Controls>
        <F2Control ControlName="mavh_whnum" F2GridInfo="F2GridInfo_WHM.xml">
          <RelationF2Tables>
            <RelationF2Table TableName="whm"/>
          </RelationF2Tables>
        </F2Control>

        <F2Control ControlName="mavh_sitenum" F2GridInfo="F2GridInfo_SITM.xml">
          <RelationF2Tables>
            <RelationF2Table TableName="sitm"/>
          </RelationF2Tables>
        </F2Control>
          </F2Controls>
        
				<!-- mav1 -->
				<Details>
					<Detail DataGridName="dg_Detail" DetailGridInfo="DetailGridInfo_MAV1.xml"  CaptionText="Stock Adjustment Note Details"/>
				</Details>
			</DocumentPageInfo>
		</DocumentPages>
    <Reports>
      <Report ReportName="Stock Adjustment"			ReportPath="\MAV\Report\MAVFrm_Adj.rpt"/>
      <Report ReportName="Stock Take Report"			ReportPath="\MAV\Report\MAVFrm_Take.rpt"/>
    </Reports>
	</DocumentInfo>
</BizXml>