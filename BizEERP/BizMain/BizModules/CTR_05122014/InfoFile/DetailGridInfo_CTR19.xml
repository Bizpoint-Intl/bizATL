		<DetailGridColumnInfo MappingName="grosamt"		HeaderText="{languageBinding.grosamt}"			Width="80"	Text="0"/>
		<DetailGridColumnInfo MappingName="discamt"		HeaderText="{languageBinding.discamt}"			Width="80"	Text="0"/>
		<DetailGridColumnInfo MappingName="oriamt"			HeaderText="{languageBinding.detail1_oriamt}"	Width="80"	Text="0"	ReadOnly="true"/>
		<DetailGridColumnInfo MappingName="remark"		HeaderText="{languageBinding.remarks}"			Width="300"/>
		<DetailGridColumnInfo MappingName="refnum"		HeaderText="{languageBinding.refnum}"			Width="0"	ReadOnly="true" Key="True"/>
