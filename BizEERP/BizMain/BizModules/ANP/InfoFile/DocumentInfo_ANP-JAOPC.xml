<?xml version="1.0" encoding="utf-8"?>
<BizXml	xmlns="BizRAD.BizDocument,	BizBase"
		xmlns:bas="BizRAD.BizBase,	BizBase"
		xmlns:def="Definition"
		xmlns:ref="Reference">
	<DocumentInfo Name="documentInfo" MainTable="anph" Key="refnum" CompanyTitle="{languageBinding.coyASOMS}" ModuleTitle="Advertisement and Promotion">
		<RelationTables>
			<DocRelationTableInfo TableName="ard"	DataField="refnum" ConditionField="refnum"/>
			<DocRelationTableInfo TableName="gld"	DataField="refnum" ConditionField="refnum"/>
			<DocRelationTableInfo	TableName="arm" DataField="arnum" ConditionField="arnum"/>
			<DocRelationTableInfo TableName="gstm" DataField="gstgrpnum" ConditionField="gstgrpnum">
				<Fields>
					<Field ColumnName="gstgrpname"/>
					<Field ColumnName="gsttype"/>
				</Fields>
			</DocRelationTableInfo>
			<!--<DocRelationTableInfo TableName="acm" DataField="accnum" ConditionField="accnum">
				<Fields>
					<Field ColumnName="accname"/>
				</Fields>
			</DocRelationTableInfo>-->
			<DocRelationTableInfo TableName="exr" DataField="oricur" ConditionField="oricur">
				<Fields>
					<Field ColumnName="curname"/>
				</Fields>
			</DocRelationTableInfo>
			<DocRelationTableInfo TableName="ptm" DataField="ptnum" ConditionField="payterms"/>
			<DocRelationTableInfo TableName="hemph" DataField="empnum" ConditionField="issueby"	DataTableName="hemphIssue"/>
			<DocRelationTableInfo TableName="hemph" DataField="empnum" ConditionField="approveby"	DataTableName="hemphApprove"/>
			<DocRelationTableInfo TableName="whm" DataField="whnum" ConditionField="whnum"/>
		</RelationTables>
		<DocumentPages>
			<!-- anph -->
			<DocumentPageInfo FileName="Header.xml"		FormName="header" Title="Header">
				<F2Controls>
					<F2Control ControlName="anph_arnum" F2GridInfo="F2GridInfo_ARM.xml">
						<RelationF2Tables>
							<RelationF2Table TableName="arm"/>
						</RelationF2Tables>
					</F2Control>
					<!--<F2Control ControlName="anph_accnum" F2GridInfo="F2GridInfo_ACM.xml">
						<RelationF2Tables>
							<RelationF2Table TableName="acm"/>
						</RelationF2Tables>
					</F2Control>-->
					<F2Control ControlName="anph_payterms" F2GridInfo="F2GridInfo_PTM.xml">
						<RelationF2Tables>
							<RelationF2Table TableName="ptm"/>
						</RelationF2Tables>
					</F2Control>
					<F2Control ControlName="anph_gstgrpnum" F2GridInfo="F2GridInfo_GSTM.xml">
						<RelationF2Tables>
							<RelationF2Table TableName="gstm"/>
						</RelationF2Tables>
					</F2Control>
					<F2Control ControlName="anph_oricur" F2GridInfo="F2GridInfo_EXR.xml">
						<RelationF2Tables>
							<RelationF2Table TableName="exr"/>
						</RelationF2Tables>
					</F2Control>
					<F2Control ControlName="anph_issueby" F2GridInfo="F2GridInfo_HEMPH.xml">
						<RelationF2Tables>
							<RelationF2Table TableName="hemphIssue"/>
						</RelationF2Tables>
					</F2Control>
					<F2Control ControlName="anph_approveby" F2GridInfo="F2GridInfo_HEMPH.xml">
						<RelationF2Tables>
							<RelationF2Table TableName="hemphApprove"/>
						</RelationF2Tables>
					</F2Control>
					<F2Control ControlName="anph_whnum" F2GridInfo="F2GridInfo_WHM.xml">
						<RelationF2Tables>
							<RelationF2Table TableName="whm"/>
						</RelationF2Tables>
					</F2Control>
             </F2Controls>			
			</DocumentPageInfo>


			<!--Detail-->
			<DocumentPageInfo FileName="Detail.xml" FormName="detail" Title="Details">
				<Details>
					<Detail DataGridName="dg_ANP1"	DetailGridInfo="DetailGridInfo_ANP1.xml" CaptionText="Advertisement and Promotion Details"/>
				</Details>
			</DocumentPageInfo>

			<DocumentPageInfo FileName="MWT.xml"	FormName="MWT" Title="Material Warehouse">
				<Details>
					<Detail DataGridName="MWT"	DetailGridInfo="DetailGridInfo_MWT.xml" CaptionText="Material Warehouse"/>
				</Details>
			</DocumentPageInfo>

			<!--Cost Centre Distribution-->
			<!--<DocumentPageInfo FileName="CcDist.xml" FormName="CcDist" Title="Cost Centre Distribution">
				<Details>
					<Detail DataGridName="detail_CcDist" DetailGridInfo="DetailGridInfo_CcDist.xml"  CaptionText="Cost Centre Distribution"/>
				</Details>
			</DocumentPageInfo>-->

			<!-- ard, gld -->
			<!--<DocumentPageInfo FileName="Ledgers.xml"	FormName="ledger" Title="Ledgers">
				<Details>
					<Detail DataGridName="dg_ARD"		DetailGridInfo="DetailGridInfo_ARD.xml"		CaptionText="Debtors (A/R Ledger) Details"/>
					<Detail DataGridName="dg_GLD"		DetailGridInfo="DetailGridInfo_GLD.xml"		CaptionText="General Ledger Details"/>
				</Details>
			</DocumentPageInfo>-->      
		</DocumentPages>
		<Reports>
			<Report ReportName="Advertisement and Promotion"		ReportPath="\ANP\Report\anpfrm.rpt" />			
