		<DetailGridColumnInfo MappingName="sitenum"			  HeaderText="Site No"		Width="120" F2="True" F2GridInfo="F2GridInfo_SITM.xml"/>
		<DetailGridColumnInfo MappingName="sitename"	HeaderText="Site"	 Width="250"     ReadOnly="True"    Format="#,##0.00####"/>
		<DetailGridColumnInfo MappingName="remark"	HeaderText="Remarks"	 Width="350"      Format="#,##0.00####"/>
		<DetailGridColumnInfo MappingName="sitmdnum"		HeaderText=""			Width="0"	ReadOnly="true" Key="True"/>
