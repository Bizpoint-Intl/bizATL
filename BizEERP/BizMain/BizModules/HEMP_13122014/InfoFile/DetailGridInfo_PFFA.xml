<?xml version="1.0" encoding="utf-8"?>
<BizXml	xmlns="BizRAD.BizDetail, BizBase"
		xmlns:rel="BizRAD.BizBase, BizBase"
		xmlns:def="Definition"
		xmlns:ref="Reference">
	<DetailGridInfo Name="detailGridInfo" MainTable="pffa" Title="Archive">
		<VirtualColumns>
			<rel:VirtualColumn	ColumnName="mark" DataType="System.Boolean" DefaultValue="False"/>
		</VirtualColumns>
		<DetailGridColumnInfo MappingName="mark"  		  HeaderText="{languageBinding.mark}"		  Width="40" 	ColumnType="CheckBox"/>
		<DetailGridColumnInfo MappingName="remark"	HeaderText="Description" ReadOnly="True" 	Width="350" />
		<DetailGridColumnInfo MappingName="filedesc"	HeaderText="File Desc" ReadOnly="True" 	Width="250"          />
		<DetailGridColumnInfo MappingName="filename"	HeaderText="" ReadOnly="True" 	Width="0"         />
		<DetailGridColumnInfo MappingName="physicalserverlocation"	HeaderText="Root Location"	Width="250"          ReadOnly="true"/>				        
		<DetailGridColumnInfo MappingName="trackingno"	HeaderText=""	Width="0"         ReadOnly="true"/>
		<DetailGridColumnInfo MappingName="mappedDrivelocation"	HeaderText=""	Width="0"          ReadOnly="true"/>
		<DetailGridColumnInfo MappingName="status"	HeaderText="Status"	Width="50"        ReadOnly="true"/>		
		<DetailGridColumnInfo MappingName="created"	HeaderText="Created"	Width="80"        ColumnType="DateTime" Format="Custom" CustomFormat="dd-MM-yyyy" ReadOnly="true"/>
		<DetailGridColumnInfo MappingName="nric"		HeaderText=""			Width="0"	ReadOnly="true" />
		<DetailGridColumnInfo MappingName="empnum"		HeaderText=""			Width="0"	ReadOnly="true"  Key="True"/>
	</DetailGridInfo>
</BizXml>

