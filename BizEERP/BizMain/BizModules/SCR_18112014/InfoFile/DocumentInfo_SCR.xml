<?xml version="1.0" encoding="utf-8"?>
<BizXml	xmlns="BizRAD.BizDocument,	BizBase"
		xmlns:bas="BizRAD.BizBase,	BizBase"
		xmlns:def="Definition"
		xmlns:ref="Reference">
	<DocumentInfo Name="documentInfo" MainTable="sivh" Key="refnum" CompanyTitle="{languageBinding.coyBizERP}" ModuleTitle="Sales Credit Note">
		<RelationTables>
			<DocRelationTableInfo TableName="siv10" DataField="refnum" ConditionField="refnum" Save="True"/>
			<DocRelationTableInfo TableName="ard"	DataField="refnum" ConditionField="refnum"/>
			<DocRelationTableInfo TableName="gld"	DataField="refnum" ConditionField="refnum"/>

			<!--steve*-->
			<!--<DocRelationTableInfo TableName="locm" DataField="locno" ConditionField="locno"/>
      <DocRelationTableInfo TableName="deptm" DataField="deptno" ConditionField="deptno"/>-->
			<!--steve end-->
			<DocRelationTableInfo	TableName="arm" DataField="arnum" ConditionField="arnum">
				<Fields>
					<Field ColumnName="arname"/>
					<Field ColumnName="address"/>
					<Field ColumnName="phone"/>
					<Field ColumnName="hp"/>
					<Field ColumnName="fax"/>
				</Fields>
			</DocRelationTableInfo>
			<DocRelationTableInfo TableName="gstm" DataField="gstgrpnum" ConditionField="gstgrpnum">
				<Fields>
					<Field ColumnName="gstgrpname"/>
					<Field ColumnName="gsttype"/>
				</Fields>
			</DocRelationTableInfo>
			<DocRelationTableInfo TableName="acm" DataField="accnum" ConditionField="accnum">
				<Fields>
					<Field ColumnName="accname"/>
				</Fields>
			</DocRelationTableInfo>
			<DocRelationTableInfo TableName="exr" DataField="oricur" ConditionField="oricur">
				<Fields>
					<Field ColumnName="curname"/>
				</Fields>
			</DocRelationTableInfo>
			<DocRelationTableInfo TableName="ptm" DataField="ptnum" ConditionField="payterms"/>
			<DocRelationTableInfo TableName="sivhView"	DataField="refnum" ConditionField="invnum"/>
		</RelationTables>
		<DocumentPages>
			<!-- sivh -->
			<DocumentPageInfo FileName="Header.xml"		FormName="header" Title="Header">
				<F2Controls>
					<F2Control ControlName="sivh_arnum" F2GridInfo="F2GridInfo_ARM.xml">
						<RelationF2Tables>
							<RelationF2Table TableName="arm"/>
						</RelationF2Tables>
					</F2Control>
					<F2Control ControlName="sivh_invnum" F2GridInfo="F2GridInfo_SIVH.xml">
						<RelationF2Tables>
							<RelationF2Table TableName="sivhView"/>
						</RelationF2Tables>
					</F2Control>
					<F2Control ControlName="sivh_accnum" F2GridInfo="F2GridInfo_ACM.xml">
						<RelationF2Tables>
							<RelationF2Table TableName="acm"/>
						</RelationF2Tables>
					</F2Control>
					<F2Control ControlName="sivh_payterms" F2GridInfo="F2GridInfo_PTM.xml">
						<RelationF2Tables>
							<RelationF2Table TableName="ptm"/>
						</RelationF2Tables>
					</F2Control>
					<F2Control ControlName="sivh_gstgrpnum" F2GridInfo="F2GridInfo_GSTM.xml">
						<RelationF2Tables>
							<RelationF2Table TableName="gstm"/>
						</RelationF2Tables>
					</F2Control>
					<F2Control ControlName="sivh_oricur" F2GridInfo="F2GridInfo_EXR.xml">
						<RelationF2Tables>
							<RelationF2Table TableName="exr"/>
						</RelationF2Tables>
					</F2Control>
          <!--steve*-->
          <!--<F2Control ControlName="sivh_locno"  F2GridInfo="F2GridInfo_LOCM.xml">
            <RelationF2Tables>
              <RelationF2Table TableName="locm"/>
            </RelationF2Tables>
          </F2Control>
          <F2Control ControlName="sivh_deptno"  F2GridInfo="F2GridInfo_DEPTM.xml">
            <RelationF2Tables>
              <RelationF2Table TableName="deptm"/>
            </RelationF2Tables>
          </F2Control>-->
          <!--steve end-->
				</F2Controls>
				<Details>
					<Detail DataGridName="dg_SIV1"	DetailGridInfo="DetailGridInfo_SIV1.xml" CaptionText="Sales Credit Note Details"/>
				</Details>
			</DocumentPageInfo>

      <!--San*-->
      <!--Cost Centre Distribution-->
      <DocumentPageInfo FileName="CcDist.xml" FormName="CcDist" Title="Cost Centre Distribution">
        <Details>
          <Detail DataGridName="detail_CcDist" DetailGridInfo="DetailGridInfo_CcDist.xml"  CaptionText="Cost Centre Distribution"/>
        </Details>
      </DocumentPageInfo>
      <!--San_End-->

			<!-- ard, gld -->
			<DocumentPageInfo FileName="Ledgers.xml"	FormName="ledger" Title="Ledgers">
				<Details>
					<Detail DataGridName="dg_ARD"		DetailGridInfo="DetailGridInfo_ARD.xml"		CaptionText="Debtors (A/R Ledger) Details"/>
					<Detail DataGridName="dg_GLD"		DetailGridInfo="DetailGridInfo_GLD.xml"		CaptionText="General Ledger Details"/>
				</Details>
			</DocumentPageInfo>
		</DocumentPages>
		<Reports>
			<!--<Report ReportName="Sales Credit Note" ReportPath="\SCR\Report\scrfrm.rpt" />-->
			<Report ReportName="Sales Credit Note" ReportPath="\SCR\Report\creditNote.rpt" />
		</Reports>
	</DocumentInfo>-->
