<?xml version="1.0" encoding="utf-8"?>
<BizXml	xmlns="BizRAD.BizDetail, BizBase"
		xmlns:bas="BizRAD.BizBase,	BizBase"
		xmlns:def="Definition"
		xmlns:ref="Reference">
	<DetailGridInfo Name="detailGridInfo" MainTable="adh1" Title="Man Power">
		<RelationTables>
			<bas:RelationTableInfo TableName="matm"	DataField="matnum"	ConditionField="matnum"/>
		</RelationTables>
		<VirtualColumns>
			<bas:VirtualColumn	ColumnName="mark" DataType="System.Boolean" DefaultValue="False"/>
		</VirtualColumns>
		<DetailGridColumnInfo MappingName="mark"  		  HeaderText="{languageBinding.mark}"		  Width="40" 	ColumnType="CheckBox"/>
		<DetailGridColumnInfo MappingName="matnum"			  HeaderText="Appointment" 		Width="150" F2="True" F2GridInfo="F2GridInfo_APPT.xml">
			<RelationF2Columns>
				<RelationF2Column ColumnName="matname"	F2MappingName="matname"/>
			</RelationF2Columns>
		</DetailGridColumnInfo>
		<DetailGridColumnInfo MappingName="matname"	HeaderText="Desc"	Width="100"         Format="#,##0.00####" ReadOnly="True" TableName="matm"/>
		<DetailGridColumnInfo MappingName="estmamt"			  HeaderText="Est Amt per Mth"		Width="120" />
		<DetailGridColumnInfo MappingName="actmamt"			  HeaderText="Act Amt per Mth"		Width="120" />
		<DetailGridColumnInfo MappingName="officerqty"	HeaderText="Qty"	Width="70"         Format="#,##0.00####" />


		<DetailGridColumnInfo MappingName="mthnum"			  HeaderText="No of Mths"		Width="70" ReadOnly="True" />
		
		<DetailGridColumnInfo MappingName="rate"	HeaderText=""	Width="0"         Format="#,##0.00####" ReadOnly="True"/>


		<DetailGridColumnInfo MappingName="oriamt"			  HeaderText="Act $ per Mth"		Width="100" />
		<DetailGridColumnInfo MappingName="hperd"			  HeaderText="Hrs per Wk"		Width="100"  ReadOnly="True"/>
		<DetailGridColumnInfo MappingName="dperw"			  HeaderText="Days per Wk"		Width="100" ReadOnly="True"/>
		<DetailGridColumnInfo MappingName="wperm"			  HeaderText=""		Width="0" />
		<DetailGridColumnInfo MappingName="hcost"			  HeaderText="Cost per Hr"		Width="100" />
		
		<DetailGridColumnInfo MappingName="xday1"  		  HeaderText="MON"		  Width="40" 	 F2="True" F2GridInfo="F2GridInfo_SHM.xml"/>
		<DetailGridColumnInfo MappingName="xday2"  		  HeaderText="TUE"		  Width="40" 	 F2="True" F2GridInfo="F2GridInfo_SHM.xml"/>
		<DetailGridColumnInfo MappingName="xday3"  		  HeaderText="WED"		  Width="40" 	 F2="True" F2GridInfo="F2GridInfo_SHM.xml"/>
		<DetailGridColumnInfo MappingName="xday4"  		  HeaderText="THU"		  Width="40" 	 F2="True" F2GridInfo="F2GridInfo_SHM.xml"/>
		<DetailGridColumnInfo MappingName="xday5"  		  HeaderText="FRI"		  Width="40" 	 F2="True" F2GridInfo="F2GridInfo_SHM.xml"/>
		<DetailGridColumnInfo MappingName="xday6"  		  HeaderText="SAT"		  Width="40" 	 F2="True" F2GridInfo="F2GridInfo_SHM.xml"/>
		<DetailGridColumnInfo MappingName="xday7"  		  HeaderText="SUN"		  Width="40" 	 F2="True" F2GridInfo="F2GridInfo_SHM.xml"/>
		<DetailGridColumnInfo MappingName="perappoitamt"	HeaderText="" ReadOnly="True" 	Width="0"        Format="#,##0.00####" />
		<DetailGridColumnInfo MappingName="ispubhol"  		  HeaderText="Public"		  Width="45" 	 F2="True" F2GridInfo="F2GridInfo_SHM.xml"/>
		<DetailGridColumnInfo MappingName="perhr"	HeaderText="" ReadOnly="True" 	Width="0"        Format="#,##0.00####" />

		<DetailGridColumnInfo MappingName="remark"	HeaderText="Remarks"	Width="200"         Format="#,##0.00####" />
		<DetailGridColumnInfo MappingName="refnum"		HeaderText=""			Width="0"	ReadOnly="true" Key="True"/>

	</DetailGridInfo>
</BizXml>

