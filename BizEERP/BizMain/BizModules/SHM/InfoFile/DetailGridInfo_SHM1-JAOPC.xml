<?xml version="1.0" encoding="utf-8"?>
<BizXml	xmlns="BizRAD.BizDetail, BizBase"
		xmlns:rel="BizRAD.BizBase, BizBase"
		xmlns:def="Definition"
		xmlns:ref="Reference">
	<DetailGridInfo Name="detailGridInfo" MainTable="shm1" Title="For 12 Hrs Shift">
		<RelationTables>
			<rel:RelationTableInfo TableName="arm" DataField="arnum" ConditionField="arnum"/>
		</RelationTables>
		<VirtualColumns>
			<rel:VirtualColumn	ColumnName="mark" DataType="System.Boolean" DefaultValue="False"/>
			<rel:VirtualColumn	ColumnName="arname" DataType="System.String" DefaultValue=""/>
		</VirtualColumns>
		<DetailGridColumnInfo MappingName="mark"  		  HeaderText="{languageBinding.mark}"		  Width="40" 	ColumnType="CheckBox"/>		
		<DetailGridColumnInfo MappingName="arnum"			  HeaderText="Customer Code"		Width="90" F2="True" F2GridInfo="F2GridInfo_ARM.xml"/>
		<DetailGridColumnInfo MappingName="arname"	HeaderText="Customer Name"	 Width="150"     ReadOnly="True"    Format="#,##0.00####"/>
		<DetailGridColumnInfo MappingName="location"	HeaderText="Location"	 Width="350"      Format="#,##0.00####"/>
		<DetailGridColumnInfo MappingName="shiftcode"		HeaderText=""			Width="0"	ReadOnly="true" Key="True"/>
	</DetailGridInfo>
</BizXml>

