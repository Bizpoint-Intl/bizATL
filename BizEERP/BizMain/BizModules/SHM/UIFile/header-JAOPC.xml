            <ele:BizDisplayValuePair>
              <ele:ComboBoxItems>
                <ele:ComboBoxItem DisplayMember="D"							ValueMember="D"/>
                <ele:ComboBoxItem DisplayMember="N"				ValueMember="N"/>
                <ele:ComboBoxItem DisplayMember="C"							ValueMember="C"/>               
              </ele:ComboBoxItems>
            </ele:BizDisplayValuePair>
          </ComboBox>


          <GroupBox	Name="grb_weektimeinfo"	Location="380,  100" 	  		Size="340, 175" 	Text="" >
            <Controls>
              <DataGrid	Name="dg_detailedweektime" Location="0, 0"	      Size="340, 175" 	Dock="Fill" HeaderForeColor="ControlText" TabIndex="0" CaptionBackColor="{languageBinding.captionBackColor}"/>
            </Controls>
          </GroupBox>

          <Label		Name="lbl_remark"	Location="5, 75" Size="150, 21"		Text="Remarks"/>
          <TextBox	Name="shm_remark" Location="5, 100" Size="320, 80" Multiline="True" ScrollBars="Vertical" CharacterCasing="Upper"/>


          <GroupBox	Name="grb_shmweekinfo"	Location="5, 200" 	  		Size="365,80" 	Text="Day" >
            <Controls>
              <CheckBox	Name="cb_all" Text="All Week" 		Location="10,	20"		Size="100, 20"	TabIndex="0"	FlatStyle="System"/>

              <CheckBox	Name="shm_Monday" Text="Mon" 		Location="10,	45"		Size="50, 20"	TabIndex="0"	FlatStyle="System"/>
              <CheckBox	Name="shm_Tuesday" Text="Tue" 		Location="60,	45"		Size="50, 20"	TabIndex="0"	FlatStyle="System"/>
              <CheckBox	Name="shm_Wednesday" Text="Wed" 		Location="110,	45"		Size="50, 20"	TabIndex="0"	FlatStyle="System"/>
              <CheckBox	Name="shm_Thursday" Text="Thu" 		Location="160,	45"		Size="50, 20"	TabIndex="0"	FlatStyle="System"/>
              <CheckBox	Name="shm_Friday" Text="Fri" 		Location="210,	45"		Size="50, 20"	TabIndex="0"	FlatStyle="System"/>
              <CheckBox	Name="shm_Saturday" Text="Sat" 		Location="260,	45"		Size="50, 20"	TabIndex="0"	FlatStyle="System"/>
					<CheckBox	Name="shm_Sunday" Text="Sun" 		Location="310,	45"		Size="50, 20"	TabIndex="0"	FlatStyle="System"/>
