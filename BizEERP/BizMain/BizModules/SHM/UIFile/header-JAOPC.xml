	<Form Name="header" Text="Page" Location="4, 21" Size="736, 535" ForeColor="Black" TabIndex="3" Font="{languageBinding.sys_font}">
		<Controls>
	
			<GroupBox	Name="grb_shmshiftinfo"		  Location="5, 10"		Size="731,300" 	Text="Shift Information" >
				<Controls>

					<Label		Name="lbl_timein"			   Location="5,  25"	  Size="60, 21" TextAlign="MiddleLeft" Text="Time In"/>
					<TextBox	Name="shm_timein" 	  Location="5,50"		Size="80,21"	TabIndex="51"/>
					<!--<dtp:BizDateTimePicker Name="shm_timein"    Location="65,50"      Size="80, 21"  Format="Time" ShowUpDown="True" CustomFormat="HH:mm:ss" />-->


					<Label		Name="lbl_timeout"	   Location="110,  25"	Size="60, 21" TextAlign="MiddleLeft" Text="Time Out"/>
					<TextBox	Name="shm_timeout"  Location="110, 50"		Size="80,21"	TabIndex="51"/>


					<Label		Name="lbl_ttlworkinghrs"	  Location="200,  25"		Size="80, 16"	TextAlign="Right" Text="Total Working Hours"/>
					<TextBox	Name="shm_ttlworkinghrs" ReadOnly="True" 	  Location="200,50"		Size="60,21"	TabIndex="51"/>


          <Label		Name="lbl_ShiftType"	  Location="380,  25"		Size="80, 16"	TextAlign="Right" Text="Type"/>
