<?xml version="1.0" encoding="utf-8"?>
<BizXml	xmlns="BizRAD.BizDetail, BizBase"
		xmlns:bas="BizRAD.BizBase,	BizBase"
		xmlns:def="Definition"
		xmlns:ref="Reference">
	<DetailGridInfo Name="detailGridInfo" MainTable="wor4" Title="Location">
		<VirtualColumns>
			<bas:VirtualColumn	ColumnName="mark" DataType="System.Boolean" DefaultValue="False"/>
			<bas:VirtualColumn ColumnName="button"	DataType="System.String" DefaultValue="View" />
		</VirtualColumns>
		<DetailGridColumnInfo MappingName="mark"  		  HeaderText="{languageBinding.mark}"		  Width="40" 	ColumnType="CheckBox"/>
		<DetailGridColumnInfo MappingName="ctrnum"		HeaderText="Contract No"			Width="80"	F2="True" F2GridInfo="F2GridInfo_CTRH.xml"/>
		<DetailGridColumnInfo MappingName="sectorcode"		HeaderText="Zone"			Width="80"	F2="True" F2GridInfo="F2GridInfo_SEM.xml" />
		<DetailGridColumnInfo MappingName="fromsitenum"	HeaderText="Project Site" 	Width="80"   F2="True" F2GridInfo="F2GridInfo_SITM.xml" />
		<DetailGridColumnInfo MappingName="tositenum"	HeaderText="Issued To" 	Width="80"  F2="True" F2GridInfo="F2GridInfo_SITM.xml" />
		<DetailGridColumnInfo MappingName="address"	HeaderText="Address"  	Width="200"  />
		<DetailGridColumnInfo MappingName="worstatus"	HeaderText="Status"  	Width="200"  ReadOnly="True"/>
		<DetailGridColumnInfo MappingName="rating"	HeaderText="Rating"  	Width="50"  ReadOnly="True"/>
		<DetailGridColumnInfo MappingName="signoffdt"	HeaderText="Sign Off Date"  	Width="100"  />
		<!--<DetailGridColumnInfo MappingName="signoffsig"	HeaderText="Signature"  	Width="200"  />-->
		<DetailGridColumnInfo MappingName="remark"	HeaderText="Remark"  	Width="200"  />
		<DetailGridColumnInfo MappingName="button"		HeaderText="Signature"			Width="80"	ColumnType="TextBox" />
		<DetailGridColumnInfo MappingName="refnum"		HeaderText=""			Width="0"	ReadOnly="true" Key="True"/>		
	</DetailGridInfo>
</BizXml>

