<?xml version="1.0" encoding="utf-8"?>
<BizXml	xmlns="BizRAD.BizDetail, BizBase"
		xmlns:bas="BizRAD.BizBase,	BizBase"
		xmlns:def="Definition"
		xmlns:ref="Reference">
	<DetailGridInfo Name="detailGridInfo" MainTable="matm2">
		<RelationTables>
			<bas:RelationTableInfo TableName="apm"	DataField="apnum"	ConditionField="apnum"/>
		</RelationTables>
		<VirtualColumns>
			<bas:VirtualColumn ColumnName="mark"	DataType="System.Boolean" DefaultValue="False"/>
		</VirtualColumns>
		<DetailGridColumnInfo MappingName="mark"			HeaderText="{languageBinding.mark}"				Width="40"	ColumnType="CheckBox"/>
		<DetailGridColumnInfo MappingName="apnum"		HeaderText="{languageBinding.apnum}"			Width="100"	F2="True"  F2GridInfo="F2GridInfo_APM.xml">
			<RelationF2Columns>
				<RelationF2Column ColumnName="apname"				F2MappingName="apname"/>
			</RelationF2Columns>
		</DetailGridColumnInfo>
		<DetailGridColumnInfo MappingName="apname"				HeaderText="{languageBinding.matname}"				Width="300" TableName="apm" ReadOnly="True"/>
		<DetailGridColumnInfo MappingName="matnum"		HeaderText="ProductCode"			Width="0"	ReadOnly="true" Key="True"/>
    <DetailGridColumnInfo MappingName="apmatnum"		HeaderText="AP ProductNo"			Width="100"	 />
    <DetailGridColumnInfo MappingName="uomcode"		HeaderText="Purchase OUM"			Width="100"	F2="True"  F2GridInfo="F2GridInfo_UOM.xml" />
    <DetailGridColumnInfo MappingName="dpriceConvert"		HeaderText="Purcahse price"			Width="100"	 />
    <DetailGridColumnInfo MappingName="uomqty"		HeaderText="Qty Conversion factor"			Width="100"	 />
    <DetailGridColumnInfo MappingName="baseunitprice"		HeaderText="Base Unit Price"			Width="100" 	ReadOnly="True" />
	</DetailGridInfo>
</BizXml>
