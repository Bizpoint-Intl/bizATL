<?xml version="1.0" encoding="utf-8"?>
<BizXml	xmlns="BizRAD.BizDetail, BizBase"
		xmlns:bas="BizRAD.BizBase,	BizBase"
		xmlns:def="Definition"
		xmlns:ref="Reference">
  <DetailGridInfo Name="detailGridInfo" MainTable="trq1" Title="Details">
    <RelationTables>
      <bas:RelationTableInfo TableName="matm" DataField="matnum" ConditionField="matnum"/>
    </RelationTables>
    <VirtualColumns>
      <bas:VirtualColumn	ColumnName="mark" DataType="System.Boolean" DefaultValue="False"/>
    </VirtualColumns>
    <DetailGridColumnInfo MappingName="mark"				HeaderText="{languageBinding.mark}"				Width="35"	ColumnType="CheckBox"/>
    <DetailGridColumnInfo MappingName="sectorcode"			HeaderText=""		Width="0" F2="True" F2GridInfo="F2GridInfo_SEM.xml"/>
    <DetailGridColumnInfo MappingName="sitenum"			HeaderText=""		Width="0" F2="True" F2GridInfo="F2GridInfo_SITM.xml"/>
    <DetailGridColumnInfo MappingName="whnum"			HeaderText="WHNUM"		Width="80" F2="True" F2GridInfo="F2GridInfo_WHM.xml"/>
    <DetailGridColumnInfo MappingName="trqnum"			HeaderText=""		Width="0" ReadOnly="true"/>




    <!--<DetailGridColumnInfo MappingName="matnum"			HeaderText="Product Code"		Width="120" F2="True" F2GridInfo="F2GridInfo_MATMSTK.xml" >
			 <RelationF2Columns>
				 <RelationF2Column ColumnName="matname"	F2MappingName="matname"/>
				 <RelationF2Column ColumnName="uomcode"	F2MappingName="uomcode"/>
				 <RelationF2Column ColumnName="pcatcode"	F2MappingName="pcatcode"/>
			 </RelationF2Columns>
		 </DetailGridColumnInfo>-->
    <DetailGridColumnInfo MappingName="matnum"	HeaderText="Product Code"	Width="80"         ReadOnly="True" TableName="matm"/>
    <DetailGridColumnInfo MappingName="matname"			HeaderText="Description"		Width="200" F2="True" F2GridInfo="F2GridInfo_MATMNAME.xml" >
      <RelationF2Columns>
        <RelationF2Column ColumnName="matnum"	F2MappingName="matnum"/>
        <RelationF2Column ColumnName="uomcode"	F2MappingName="uomcode"/>
        <RelationF2Column ColumnName="pcatcode"	F2MappingName="pcatcode"/>
      </RelationF2Columns>
    </DetailGridColumnInfo>
    <DetailGridColumnInfo MappingName="barcode"	HeaderText="SN"	Width="80"         ReadOnly="True" />
    <DetailGridColumnInfo MappingName="uomcode"					HeaderText="{languageBinding.uom}"				Width="60" ReadOnly="true" TableName="matm"/>
    <DetailGridColumnInfo MappingName="pcatcode"			HeaderText=""		Width="0" ReadOnly="true" TableName="matm"/>
    <DetailGridColumnInfo MappingName="stdqty"					HeaderText=""				Width="0" ReadOnly="true"/>
    <DetailGridColumnInfo MappingName="retail"					HeaderText="Last Price"				Width="60" />
    <DetailGridColumnInfo MappingName="month3qty"					HeaderText="M3 Qty"				Width="60" ReadOnly="true"/>
    <DetailGridColumnInfo MappingName="month2qty"					HeaderText="M2 Qty"				Width="60" ReadOnly="true"/>
    <DetailGridColumnInfo MappingName="month1qty"					HeaderText="M1 Qty"				Width="60"ReadOnly="true" />
    <DetailGridColumnInfo MappingName="totalAllMonthCost"					HeaderText=""				Width="0" />


    <DetailGridColumnInfo MappingName="lasttotalqty"					HeaderText="Last Qty"				Width="60" ReadOnly="true"/>
    <DetailGridColumnInfo MappingName="senddate"					HeaderText="Last Date"				Width="80" ReadOnly="true"/>

    <DetailGridColumnInfo MappingName="trqqty"					HeaderText="Req Qty"				Width="60" ReadOnly="true"/>
    <DetailGridColumnInfo MappingName="approveqty"					HeaderText="Appove Qty"				Width="80"/>
    <DetailGridColumnInfo MappingName="qty"					HeaderText=""				Width="0" ReadOnly="true"/>
    <DetailGridColumnInfo MappingName="itemRetailTotal"					HeaderText=""				Width="0" ReadOnly="true"/>
    <DetailGridColumnInfo MappingName="remarks"			HeaderText="{languageBinding.remarks}"		Width="200"/>
    <DetailGridColumnInfo MappingName="ponum"			HeaderText="PO No 1"		Width="120"/>
    <DetailGridColumnInfo MappingName="ponum2"			HeaderText="PO No 2"		Width="120"/>
    <DetailGridColumnInfo MappingName="ponum3"			HeaderText="PO No 3"		Width="120"/>
    <DetailGridColumnInfo MappingName="ponum4"			HeaderText="PO No 4"		Width="120"/>
    <DetailGridColumnInfo MappingName="grnnum"			HeaderText="GRN No"		Width="120"/>
    <DetailGridColumnInfo MappingName="refnum"			HeaderText="{languageBinding.refnum}"			Width="0"		ReadOnly="true"  Key="true"/>
    <DetailGridColumnInfo MappingName="line"        HeaderText="{languageBinding.matnum}"           Width="0"      Sort="True"/>
    <DetailGridColumnInfo MappingName="docunum"					HeaderText=""				Width="0" ReadOnly="true"/>
  </DetailGridInfo>
</BizXml>
