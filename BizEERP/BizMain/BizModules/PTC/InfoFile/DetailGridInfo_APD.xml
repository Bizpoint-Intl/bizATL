<?xml version="1.0" encoding="utf-8"?>
<BizXml	xmlns="BizRAD.BizDetail, BizBase"
		xmlns:bas="BizRAD.BizBase,	BizBase"
		xmlns:def="Definition"
		xmlns:ref="Reference">
	<DetailGridInfo Name="detailGridInfo" MainTable="apd">
		<RelationTables>
			<bas:RelationTableInfo TableName="acm"	DataField="accnum"	ConditionField="accnum"/>
			<bas:RelationTableInfo TableName="ccm"	DataField="ccnum"	ConditionField="ccnum"/>
			<bas:RelationTableInfo TableName="apm"	DataField="apnum"	ConditionField="apnum"/>
			<bas:RelationTableInfo TableName="hemph" DataField="empnum"	ConditionField="empnum"/>
		</RelationTables>
		<VirtualColumns>
			<bas:VirtualColumn ColumnName="mark" DataType="System.Boolean" DefaultValue="False"/>
		</VirtualColumns>
		<DetailGridColumnInfo MappingName="mark"		HeaderText="{languageBinding.mark}"			Width="35"	ColumnType="CheckBox"/>
		<DetailGridColumnInfo MappingName="invdate"	HeaderText="{languageBinding.invdate}"		Width="75"  ColumnType="DateTime"/>    
		<DetailGridColumnInfo MappingName="docunum"		HeaderText="{languageBinding.docunum}"		Width="80"/>
    <!--<DetailGridColumnInfo MappingName="prjnum"		HeaderText="{languageBinding.prjnum}"		Width="80" F2="True" F2GridInfo="F2GridInfo_JRAH.xml"/>-->
		<DetailGridColumnInfo MappingName="invnum"		HeaderText="{languageBinding.invnum}"		Width="80"/>
		<DetailGridColumnInfo MappingName="apnum"		HeaderText="{languageBinding.apnum}"		Width="80"	F2="True" F2GridInfo="F2GridInfo_APM.xml">
			<RelationF2Columns>
				<RelationF2Column ColumnName="apname"	F2MappingName="apname"/>
			</RelationF2Columns>
		</DetailGridColumnInfo>
		<DetailGridColumnInfo MappingName="apname"		HeaderText="{languageBinding.apname}"		Width="170" ReadOnly="True" TableName="apm"/>
		<DetailGridColumnInfo MappingName="oricur"		HeaderText="{languageBinding.oricur}"		Width="50"	ReadOnly="True"/>
		<DetailGridColumnInfo MappingName="exrate"		HeaderText="{languageBinding.exrate}"		Width="65"	ReadOnly="True"/>
		<DetailGridColumnInfo MappingName="oridebit"	HeaderText="{languageBinding.oridebit}"		Width="75"/>
		<DetailGridColumnInfo MappingName="oricredit"	HeaderText="{languageBinding.oricredit}"	Width="75"/>
		<DetailGridColumnInfo MappingName="oriamt"		HeaderText="{languageBinding.oriamt}"		Width="75"	ReadOnly="True"/>
		<DetailGridColumnInfo MappingName="postamt"		HeaderText="{languageBinding.postamt}"		Width="75"	ReadOnly="True"/>
		<DetailGridColumnInfo MappingName="exramt"		HeaderText="{languageBinding.exramt}"		Width="75"	ReadOnly="True"/>
		<DetailGridColumnInfo MappingName="accnum"		HeaderText="{languageBinding.accnum}"		Width="80"	F2="True" F2GridInfo="F2GridInfo_ACM.xml">
			<RelationF2Columns>
				<RelationF2Column ColumnName="accname"	F2MappingName="accname"/>
			</RelationF2Columns>
		</DetailGridColumnInfo>
		<DetailGridColumnInfo MappingName="accname"		HeaderText="{languageBinding.accname}"		Width="170" ReadOnly="True" TableName="acm"/>		
		<DetailGridColumnInfo MappingName="chknum"		HeaderText="{languageBinding.chknum}"		Width="80"/>
		<DetailGridColumnInfo MappingName="detail"		HeaderText="{languageBinding.detail}"		Width="250"/>
    <!--<DetailGridColumnInfo MappingName="ccnum"		HeaderText="{languageBinding.ccnum}"		Width="95"	F2="True" F2GridInfo="F2GridInfo_CCM.xml"/>-->
    <DetailGridColumnInfo MappingName="empnum"		HeaderText="{languageBinding.empnum}"		Width="95"	F2="True" F2GridInfo="F2GridInfo_HEMPH.xml"/>
		<DetailGridColumnInfo MappingName="refnum"		HeaderText="{languageBinding.refnum}"		Width="0"	ReadOnly="True" Key="True"/>
	</DetailGridInfo>
</BizXml>
