<?xml version="1.0" encoding="utf-8"?>
<BizXml	xmlns="BizRAD.BizDetail, BizBase"
		xmlns:rel="BizRAD.BizBase, BizBase"
		xmlns:bas="BizRAD.BizBase,	BizBase"
		xmlns:def="Definition"
		xmlns:ref="Reference">
	<DetailGridInfo Name="detailGridInfo" MainTable="atmr" Title="Detailed Schedule">
		<!--<RelationTables>
			<rel:RelationTableInfo TableName="hemph" DataField="empnum" ConditionField="empnum"/>
		</RelationTables>-->

		<DetailGridColumnInfo MappingName="empnum"			  HeaderText="{languageBinding.empnum}"	 ReadOnly="true"	Width="90" />
		<DetailGridColumnInfo MappingName="empname"	HeaderText="{languageBinding.empname}"	Width="150"  ReadOnly="True" Format="#,##0.00####"/>
		<DetailGridColumnInfo MappingName="day"	HeaderText="Day"	Width="100" ReadOnly="true"  />
		<DetailGridColumnInfo MappingName="shiftcode"	HeaderText="Shiftcode"	Width="80" ReadOnly="true" />
		<DetailGridColumnInfo MappingName="timein"	HeaderText="Time In"	Width="100" ReadOnly="true" />
		<DetailGridColumnInfo MappingName="timeout"	HeaderText="Time Out"	Width="100" ReadOnly="true" />
		<DetailGridColumnInfo MappingName="date"	HeaderText="Date"	Width="100"  ReadOnly="true" />
		<DetailGridColumnInfo MappingName="isot"  		  HeaderText="Is OT"		  Width="40" 	ColumnType="CheckBox"  ReadOnly="true" />
		<DetailGridColumnInfo MappingName="otrate"	HeaderText="OT rate"	Width="40" ReadOnly="true" />
		
		<DetailGridColumnInfo MappingName="isDRE"  		  HeaderText="Is DRE"		  Width="40" 	ColumnType="CheckBox"  ReadOnly="true" />
		<DetailGridColumnInfo MappingName="isUS"  		  HeaderText="Is US"		  Width="40" 	ColumnType="CheckBox"  ReadOnly="true" />
		<DetailGridColumnInfo MappingName="isOffset"  		  HeaderText="Is Offset"		  Width="60" 	ColumnType="CheckBox"  ReadOnly="true" />

		<DetailGridColumnInfo MappingName="isRD"  		  HeaderText="Is RD"		  Width="40" 	ColumnType="CheckBox"  ReadOnly="true" />

    <DetailGridColumnInfo MappingName="sitenum"		HeaderText="{languageBinding.sitenum}"			Width="80"	/>
		<DetailGridColumnInfo MappingName="remark"		HeaderText="{languageBinding.remark}"			Width="200"	/>
    <DetailGridColumnInfo MappingName="refnum"		HeaderText=""			Width="0"	ReadOnly="true" Key="True"/>

  </DetailGridInfo>
</BizXml>

