<?xml version="1.0" encoding="utf-8"?>
<BizXml	xmlns="BizRAD.BizDetail, BizBase"
		xmlns:rel="BizRAD.BizBase, BizBase"
		xmlns:def="Definition"
		xmlns:ref="Reference">
	<DetailGridInfo Name="detailGridInfo" MainTable="pfmedu" Title="Education">
		<VirtualColumns>
			<rel:VirtualColumn	ColumnName="mark" DataType="System.Boolean" DefaultValue="False"/>
		</VirtualColumns>
		<DetailGridColumnInfo MappingName="mark"  		  HeaderText="{languageBinding.mark}"		  Width="40" 	ColumnType="CheckBox"/>
    <DetailGridColumnInfo MappingName="coursecode"			  HeaderText="Course"		Width="90" F2="True" F2GridInfo="F2GridInfo_CSEH.xml"/>
		<DetailGridColumnInfo MappingName="coursedesc"	HeaderText="Qualifications / Courses"	Width="250"   Format="#,##0.00####"/>
    <DetailGridColumnInfo MappingName="apnum"			  HeaderText="Vendor"		Width="90" F2="True" F2GridInfo="F2GridInfo_APM.xml"/>
		<DetailGridColumnInfo MappingName="Institution"			  HeaderText="Institution"		Width="150" Format="#,##0.00####" />
    <DetailGridColumnInfo MappingName="trStartDate"			  HeaderText="Start Date"		Width="120" ColumnType="DateTime" Format="Custom" CustomFormat="dd-MM-yyyy" />
    <DetailGridColumnInfo MappingName="trEndDate"			  HeaderText="End Date"		Width="120" ColumnType="DateTime" Format="Custom" CustomFormat="dd-MM-yyyy" />
    <DetailGridColumnInfo MappingName="yearfinished"			  HeaderText="Year / Date Attained"		Width="120" Format="#,##0.00####" />
		<DetailGridColumnInfo MappingName="isHighest"  		  HeaderText="Highest"		  Width="40" 	ColumnType="CheckBox"/>
		<DetailGridColumnInfo MappingName="issecurityrelated"		HeaderText="Security Related"			Width="100" DataType="System.Boolean" DefaultValue="False" ColumnType="CheckBox"/>
		<DetailGridColumnInfo MappingName="remark"			  HeaderText="Remark"		Width="200" Format="#,##0.00####" />
		<DetailGridColumnInfo MappingName="empnum"	HeaderText=""	Width="0"   Format="#,##0.00####" ReadOnly="true" Key="True"/>
		<DetailGridColumnInfo MappingName="nric"		HeaderText=""			Width="0"	ReadOnly="true" />
		<DetailGridColumnInfo MappingName="refnum"		HeaderText=""			Width="0"	ReadOnly="true" />


	</DetailGridInfo>
</BizXml>

