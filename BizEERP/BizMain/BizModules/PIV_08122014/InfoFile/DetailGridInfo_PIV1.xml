<?xml version="1.0" encoding="utf-8"?>
<BizXml	xmlns="BizRAD.BizDetail, BizBase"
		xmlns:bas="BizRAD.BizBase,	BizBase"
		xmlns:def="Definition"
		xmlns:ref="Reference">
	<DetailGridInfo Name="detailGridInfo" MainTable="piv1"  ExtractGridInfo="">
		<RelationTables>
			<bas:RelationTableInfo TableName="acm"		DataField="accnum"		ConditionField="accnum"/>
			<bas:RelationTableInfo TableName="matm"	DataField="matnum"		ConditionField="matnum"/>
			<bas:RelationTableInfo TableName="uom"		DataField="uomcode"		ConditionField="uom"/>
		</RelationTables>
		<VirtualColumns>
			<bas:VirtualColumn ColumnName="mark"	DataType="System.Boolean" DefaultValue="False"/>
		</VirtualColumns>
		<DetailGridColumnInfo MappingName="mark"			HeaderText="{languageBinding.mark}"			Width="35"	ColumnType="CheckBox"/>
		<DetailGridColumnInfo MappingName="ccnum"		HeaderText="ccnum"		Width="100" F2="True" F2GridInfo="F2GridInfo_CCM.xml"/>
		<DetailGridColumnInfo MappingName="matnum"		HeaderText="Product Code"		Width="100" F2="True" F2GridInfo="F2GridInfo_MATM.xml"/>
		<DetailGridColumnInfo MappingName="detail"			HeaderText="Product Detail"						Width="200"/>
		<DetailGridColumnInfo MappingName="uom"			HeaderText="{languageBinding.uom}"			Width="50"	F2="True" F2GridInfo="F2GridInfo_UOM.xml"/>
		<DetailGridColumnInfo MappingName="dqty"			HeaderText="{languageBinding.qty}"			Width="55"/>
		<DetailGridColumnInfo MappingName="price"			HeaderText="Price"									Width="80"/>
		<DetailGridColumnInfo MappingName="oricur"			HeaderText="{languageBinding.oricur}"			Width="50"	ReadOnly="True"/>
		<DetailGridColumnInfo MappingName="exrate"		HeaderText="{languageBinding.exrate}"		Width="75"	ReadOnly="True"/>
		<DetailGridColumnInfo MappingName="dgrosamt"		HeaderText="{languageBinding.grosamt}"		Width="75" ReadOnly="True"/>
		<DetailGridColumnInfo MappingName="discamt"		HeaderText="DiscAmt"								Width="75"/>
		<DetailGridColumnInfo MappingName="gstper"		HeaderText="{languageBinding.gstper}"		Width="75"/>
		<DetailGridColumnInfo MappingName="roriamt"		HeaderText="{languageBinding.oriamt}"		Width="75"	ReadOnly="True"/>
		<DetailGridColumnInfo MappingName="dorigstamt"	HeaderText="Orig-GstAmt"							Width="75"/>
		<DetailGridColumnInfo MappingName="rpostamt"		HeaderText="Post-Amt"								Width="75"	ReadOnly="True"/>
		<DetailGridColumnInfo MappingName="dgstamt"		HeaderText="{languageBinding.gstamt}"		Width="75"  ReadOnly="True"/>
		<DetailGridColumnInfo MappingName="accnum"		HeaderText="{languageBinding.accnum}"		Width="80"	F2="True" F2GridInfo="F2GridInfo_ACM.xml">
			<RelationF2Columns>
				<RelationF2Column ColumnName="accname"	F2MappingName="accname"/>
			</RelationF2Columns>
		</DetailGridColumnInfo>
		<DetailGridColumnInfo MappingName="accname"		HeaderText="{languageBinding.accname}"		Width="100" ReadOnly="True" TableName="acm"/>
    <DetailGridColumnInfo MappingName="docunum2"		HeaderText="Contract"			Width="120"  F2="True"  F2GridInfo="F2GridInfo_CTRH.xml"/>
    <DetailGridColumnInfo MappingName="sitenum"		HeaderText="Site"			Width="80"  F2="True"  F2GridInfo="F2GridInfo_SITM.xml"/>
    <DetailGridColumnInfo MappingName="sitename"			HeaderText="Desc"			Width="150" ReadOnly="true"/>
    <DetailGridColumnInfo MappingName="empnum"		HeaderText="OM/OE"			Width="80"  F2="True"  F2GridInfo="F2GridInfo_HEMPH.xml"/>
    <DetailGridColumnInfo MappingName="empname"			HeaderText="Name"			Width="150" ReadOnly="true"/>

    <DetailGridColumnInfo MappingName="remark"		HeaderText="Remarks"									Width="200"/>
		<DetailGridColumnInfo MappingName="refnum"		HeaderText="{languageBinding.refnum}"		Width="0"	ReadOnly="True" Key="True"/>
    <!--steve*-->
    <!--<DetailGridColumnInfo MappingName="locno"				HeaderText="Loc No."			Width="100"	F2="True" F2GridInfo="F2GridInfo_LOCM.xml" />
    <DetailGridColumnInfo MappingName="deptno"			HeaderText="Dept No."			Width="100"	F2="True" F2GridInfo="F2GridInfo_DEPTM.xml" />-->
