<?xml version="1.0" encoding="utf-8"?>
<BizXml	xmlns="BizRAD.BizDetail, BizBase"
		xmlns:bas="BizRAD.BizBase,	BizBase"
		xmlns:def="Definition"
		xmlns:ref="Reference">
	<DetailGridInfo Name="detailGridInfo" MainTable="por1"	ExtractGridInfo="ExtractGridInfo_PRQE.xml">
		<VirtualColumns>
			<bas:VirtualColumn ColumnName="mark"	DataType="System.Boolean" DefaultValue="False"/>
		</VirtualColumns>
		<DetailGridColumnInfo MappingName="mark"			HeaderText="{languageBinding.mark}"				Width="35"	ColumnType="CheckBox"/>
		<DetailGridColumnInfo MappingName="matnum"		HeaderText="{languageBinding.matnum}"			Width="120"  F2="True"  F2GridInfo="F2GridInfo_MATM.xml"/>
		<DetailGridColumnInfo MappingName="detail"			HeaderText="{languageBinding.detail}"				Width="300"/>
		<DetailGridColumnInfo MappingName="qty"			HeaderText="{languageBinding.qty}"				Width="60"/>
		<DetailGridColumnInfo MappingName="uom"			HeaderText="{languageBinding.uom}"				Width="60"	F2="True"  F2GridInfo="F2GridInfo_UOM.xml"/>
    <DetailGridColumnInfo MappingName="uprice"			HeaderText=""			Width="0"/>
		<DetailGridColumnInfo MappingName="price"			HeaderText="{languageBinding.unitprice}"			Width="80"/>
		<DetailGridColumnInfo MappingName="grosamt"		HeaderText="{languageBinding.grosamt}"			Width="80"/>
		<DetailGridColumnInfo MappingName="discamt"		HeaderText="{languageBinding.discamt}"			Width="80"/>
		<DetailGridColumnInfo MappingName="oriamt"		HeaderText="{languageBinding.detail1_oriamt}"	Width="80" 	ReadOnly="true"/>
		<DetailGridColumnInfo MappingName="remark"		HeaderText="{languageBinding.remarks}"			Width="300"/>
    <DetailGridColumnInfo MappingName="sn"		HeaderText="S/N"			Width="35" ColumnType="CheckBox"/>
    <DetailGridColumnInfo MappingName="modelcode"		HeaderText="Model"			Width="120"/>
    <DetailGridColumnInfo MappingName="pcatcode"		HeaderText="Category"			Width="80"  F2="True"  F2GridInfo="F2GridInfo_PCAT.xml"/>
    <DetailGridColumnInfo MappingName="pbrdcode"		HeaderText="Manufacturer"			Width="80"  F2="True"  F2GridInfo="F2GridInfo_PBRD.xml"/>
    <DetailGridColumnInfo MappingName="ploftcode"		HeaderText="Loft"			Width="80"  F2="True"  F2GridInfo="F2GridInfo_PLFT.xml"/>
    <DetailGridColumnInfo MappingName="pflexcode"		HeaderText="Flex"			Width="80"  F2="True"  F2GridInfo="F2GridInfo_PFLX.xml"/>
    <DetailGridColumnInfo MappingName="pshfcode"		HeaderText="Shalf"			Width="80"  F2="True"  F2GridInfo="F2GridInfo_PSHF.xml"/>
    <DetailGridColumnInfo MappingName="pcolcode"		HeaderText="Color"			Width="80"  F2="True"  F2GridInfo="F2GridInfo_PCOL.xml"/>
    <DetailGridColumnInfo MappingName="pszcode"		HeaderText="Size"			Width="80"  F2="True"  F2GridInfo="F2GridInfo_PSZ.xml"/>
    <DetailGridColumnInfo MappingName="boxno"		HeaderText="Box No"			Width="80"/>
		<DetailGridColumnInfo MappingName="refnum"		HeaderText="{languageBinding.refnum}"			Width="0"	ReadOnly="true" Key="True"/>
    <DetailGridColumnInfo MappingName="line"        HeaderText="{languageBinding.matnum}"           Width="0"      Sort="True"/>
	</DetailGridInfo>
</BizXml>
