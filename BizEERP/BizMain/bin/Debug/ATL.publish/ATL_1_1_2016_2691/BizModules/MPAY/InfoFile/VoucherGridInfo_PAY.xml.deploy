		<VoucherGridColumnInfo MappingName="remark"		HeaderText="Remarks"								Width="150"		SearchItem="True"/>
		<VoucherGridColumnInfo MappingName="[user]"		HeaderText="{languageBinding.user}"			Width="50"/>		
