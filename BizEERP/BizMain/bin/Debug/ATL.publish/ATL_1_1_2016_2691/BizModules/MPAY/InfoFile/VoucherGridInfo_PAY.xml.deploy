		xmlns:ref="Reference">
	<VoucherGridInfo Name="voucherGridInfo" MainTable="payt" Title="{languageBinding.MPAY}" DocumentInfo="DocumentInfo_PAY.xml" DeletedInfo="true">
		<RelationTables>
			<rel:RelationTableInfo TableName="apm"	    DataField="apnum"	ConditionField="apnum"/>
		</RelationTables>
		<VoucherGridColumnInfo MappingName="trandate"	HeaderText="{languageBinding.trandate}"		Width="80"			SearchItem="True"		ColumnType="DateTime"/>
