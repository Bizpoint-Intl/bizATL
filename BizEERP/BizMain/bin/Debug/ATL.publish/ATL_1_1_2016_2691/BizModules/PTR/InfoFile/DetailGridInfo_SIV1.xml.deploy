<?xml version="1.0" encoding="utf-8"?>
<BizXml	xmlns="BizRAD.BizDetail, BizBase"
		xmlns:bas="BizRAD.BizBase,	BizBase"
		xmlns:def="Definition"
		xmlns:ref="Reference">
	<DetailGridInfo Name="detailGridInfo" MainTable="siv1">
		<RelationTables>
			<bas:RelationTableInfo TableName="acm"	DataField="accnum"	ConditionField="accnum"/>
			<bas:RelationTableInfo TableName="ccm"	DataField="ccnum"	ConditionField="ccnum"/>
		</RelationTables>
		<VirtualColumns>
			<bas:VirtualColumn ColumnName="mark"	DataType="System.Boolean" DefaultValue="False"/>
		</VirtualColumns>
		<DetailGridColumnInfo MappingName="line"			HeaderText="{languageBinding.matnum}"		Width="0"	Sort="True"	AutoIncrement = "True" AutoIncrementSeed = "100" AutoIncrementStep = "100"/>
		<DetailGridColumnInfo MappingName="mark"			HeaderText="{languageBinding.mark}"			Width="35"	ColumnType="CheckBox"/>
		<DetailGridColumnInfo MappingName="trandate"		HeaderText="{languageBinding.trandate}"		Width="75"	ColumnType="DateTime"	ReadOnly="True"/>



    <DetailGridColumnInfo MappingName="invnum"		HeaderText="{languageBinding.invnum}"		Width="90"/>
    <DetailGridColumnInfo MappingName="accnum"		HeaderText="{languageBinding.accnum}"		Width="80"	F2="True" F2GridInfo="F2GridInfo_ACM.xml">
      <RelationF2Columns>
        <RelationF2Column ColumnName="accname"	F2MappingName="accname"/>
      </RelationF2Columns>
    </DetailGridColumnInfo>
    <DetailGridColumnInfo MappingName="accname"		HeaderText="{languageBinding.accname}"	Width="170" ReadOnly="True" TableName="acm"/>
    <DetailGridColumnInfo MappingName="dqty"			HeaderText="Qty"										Width="75"/>
    <DetailGridColumnInfo MappingName="price"			HeaderText="Price"									Width="75"/>
    <DetailGridColumnInfo MappingName="doriamt"		HeaderText="Original Amt"							Width="75"/>
    <DetailGridColumnInfo MappingName="gstgrpnum"	HeaderText="GST"									Width="75"  F2="True" F2GridInfo="F2GridInfo_GSTM.xml"/>
    <DetailGridColumnInfo MappingName="gstper"		HeaderText="{languageBinding.gstper}"		Width="75"/>
    <DetailGridColumnInfo MappingName="dorigstamt"	HeaderText="Orig GST Amt"						Width="75"/>
    <DetailGridColumnInfo MappingName="dpostamt"	HeaderText="{languageBinding.postamt}"		Width="75"	ReadOnly="True"/>
    <DetailGridColumnInfo MappingName="dgstamt"		HeaderText="{languageBinding.gstamt}"		Width="75"	ReadOnly="True"/>
    <DetailGridColumnInfo MappingName="ccnum"		HeaderText="ccnum"		Width="100" F2="True" F2GridInfo="F2GridInfo_CCM.xml"/>
    <DetailGridColumnInfo MappingName="projectid"		HeaderText="Proj ID"		Width="100" F2="True" F2GridInfo="F2GridInfo_PID.xml"/>
    <DetailGridColumnInfo MappingName="remark"		HeaderText="Remarks"								Width="200"/>
    <DetailGridColumnInfo MappingName="refnum"		HeaderText="{languageBinding.refnum}"		Width="0"	ReadOnly="True" Key="True"/>

    <!--steve*-->
    <!--<DetailGridColumnInfo MappingName="locno"				HeaderText="Loc No."			Width="100"	F2="True" F2GridInfo="F2GridInfo_LOCM.xml" />
    <DetailGridColumnInfo MappingName="deptno"			HeaderText="Dept No."			Width="100"	F2="True" F2GridInfo="F2GridInfo_DEPTM.xml" />-->
    <!--steve end-->
	</DetailGridInfo>
</BizXml>
